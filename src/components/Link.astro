---
interface Props {
  href: string;
  label: string;
}

const { href, label } = Astro.props;
---
<a href={href} class="link-button">
  <span class="arrow-icon">></span>
  {label}
</a>

<style>
  .link-button {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-bg-box);
    color: var(--color-fg-primary);
    text-decoration: none;
    padding: calc(var(--spacing-unit) * 2);
    border: var(--pixel-border) solid var(--color-accent-border);
    cursor: pointer;
    transition: background-color 0.1s, box-shadow 0.1s, color 0.1s, border-color 0.1s, transform 0.1s;
    width: 100%;
    box-sizing: border-box;
    
    clip-path: polygon(
      var(--pixel-border) 0,
      100% 0,
      100% calc(100% - var(--pixel-border)),
      calc(100% - var(--pixel-border)) 100%,
      0 100%,
      0 var(--pixel-border)
    );
  }

  .link-button:hover {
    background-color: var(--color-accent-border);
    color: var(--color-bg-box);
    transform: translateY(2px); 
  }
  
  .dark-mode .link-button {
    box-shadow: 
        0 0 4px var(--color-neon),
        inset 0 0 4px var(--color-neon);
  }

  .dark-mode .link-button:hover {
    background-color: rgba(51, 255, 51, 0.25);
    color: #fff;
    border-color: #fff;
    box-shadow: 
        0 0 15px var(--color-neon),
        0 0 30px var(--color-neon-shadow),
        inset 0 0 15px var(--color-neon);
    transform: translateY(2px); 
  }

  .arrow-icon {
    margin-right: var(--spacing-unit);
    color: var(--color-accent-border);
    font-weight: bold;
  }
  
  .dark-mode .arrow-icon {
    color: var(--color-neon);
    text-shadow: 0 0 2px var(--color-neon-shadow);
  }
  
  .link-button:hover .arrow-icon {
    color: var(--color-bg-box);
  }
  
  .dark-mode .link-button:hover .arrow-icon {
    color: #fff;
    text-shadow: none;
  }
</style>